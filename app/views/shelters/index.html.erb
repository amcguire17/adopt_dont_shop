<h1>All Shelters</h1>

<%= render partial: 'link', locals: { name: "Sort by number of pets", path: "/shelters?sort=pet_count", method: :get } %>

<%= render partial: 'search', locals: { path: "/shelters", method: :get } %>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
    <p>Created at: <%= shelter.created_at %></p>
    <%= render partial: 'link', locals: { name: "Update #{shelter.name}", path: "/shelters/#{shelter.id}/edit", method: :get } %>
    <%= render partial: 'link', locals: { name: "Delete #{shelter.name}", path: "/shelters/#{shelter.id}", method: :delete } %>
  </div>
<% end %>
