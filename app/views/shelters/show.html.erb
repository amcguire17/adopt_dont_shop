<h1><%= @shelter.name %></h1>
<p>Rank: <%= @shelter.rank %></p>
<p>City: <%= @shelter.city %></p>

<p class="pet-count">Pets at <%= @shelter.name %>: <%= @shelter.pet_count %></p>
<p><%= render partial: 'link', locals: { name: "All pets at #{@shelter.name}", path: "/shelters/#{@shelter.id}/pets", method: :get } %></p>

<p><%= render partial: 'link', locals: { name: "Delete #{@shelter.name}", path: "/shelters/#{@shelter.id}", method: :delete } %></p>
